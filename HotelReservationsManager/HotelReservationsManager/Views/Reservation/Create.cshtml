@model HotelReservationsManager.Models.Reservation.ReservationCreateViewModel
@{
    ViewData["Title"] = "Create Reservation";
}

@if (Model.Step == 1)
{

    <h1>Create reservation</h1>
    <h2>Choose stay options</h2>

    <hr />

    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Reservation" method="post">
            <div class="row mb-3">
                <a class="text-muted">Check-in date:</a>
                <input type="date" asp-for="CheckInDate" class="form-control" />
            </div>

            <div class="row mb-3">
                <a class="text-muted">Check-out date:</a>
                <input type="date" asp-for="CheckOutDate" class="form-control" />
            </div>

            <div class="row mb-3 custom-control custom-checkbox">
                <input asp-for="IsBreakfastIncluded" type="checkbox" class="custom-control-input" id="IsBreakfastIncluded">
                <label class="custom-control-label" for="IsBreakfastIncluded">With included breakfast</label>
            </div>

            <div class="row mb-3 custom-control custom-checkbox">
                <input asp-for="IsAllInclusive" type="checkbox" class="custom-control-input" id="IsAllInclusive">
                <label class="custom-control-label" for="IsAllInclusive">All-inclusive</label>
            </div>

            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>

    </div>
}
else if (Model.Step == 2)
{
    <h1 class="text-center">Clients</h1>
    <hr class="style1 bg-warning mb-2" />

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" asp-controller="Reservation" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <select class="custom-select mb-3" asp-for="ClientsSearch.SearchBy">
                    <option value="FirstName">First name</option>
                    <option value="LastName">Last name</option>
                </select>
                <div class="form-group">
                    <input asp-for="ClientsSearch.Value" class="form-control" />
                    <span asp-validation-for="ClientsSearch.Value" class="text-danger"></span>
                </div>
                <div class="form-group col-md2">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="justify-content-between">
        @foreach (var client in Model.ClientsSearch.Clients)
        {
        <div class="d-flex row my-3 mx-2">
            <div class="col-md-10">
                <h3>@client.FirstName @client.LastName</h3>
            </div>

            <div class="col-md-1">
                <a asp-action="Details" asp-route-id="@client.Id" class="mb-3 btn btn-warning my-3">Details</a>
            </div>
        </div>

        }
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
