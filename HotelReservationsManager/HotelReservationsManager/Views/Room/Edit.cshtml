@model HotelReservationsManager.Models.RoomViewModels.RoomEditViewModel
@{
    ViewData["Title"] = "Edit room";
}

<h1 class="text-center">Edit room</h1>

<hr class="style1 bg-warning mb-2" />

<div class="col-md-4 mx-auto">

    <form asp-action="Edit" asp-controller="Room" method="post">
        <div class="row mb-3">
            <a @*class="text-muted"*@>Capacity</a>
            <input asp-for="Capacity" class="form-control" />
            <span asp-validation-for="Capacity" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <a @*class="text-muted"*@>Room type</a>
            <select class="custom-select mb-3" asp-for="Type">
                <option value="TwoBeds">Room with separate beds</option>
                <option value="DoubleBed">Room with a double bed</option>
                <option value="Apartment">Apartment</option>
                <option value="PentHouse">Penthouse</option>
                <option value="Maisonette">Maisonette</option>
            </select>
        </div>

        <div class="row mb-3">
            <a @*class="text-muted"*@>Price for adults</a>
            <input asp-for="AdultPrice" class="form-control" />
            <span asp-validation-for="AdultPrice" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <a @*class="text-muted"*@>Price for children</a>
            <input asp-for="ChildPrice" class="form-control" />
            <span asp-validation-for="ChildPrice" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <a @*class="text-muted"*@>Number of the room</a>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>

        @*<div class="d-flex">
            <div class="align-self-center mx-auto">
                <div class="form-group col-md-1">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                </div>
            </div>
        </div>*@

        <div class="row">
            <div class="col-md-6 d-flex">
                <div class="form-group align-self-center mx-auto my-auto">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                </div>
            </div>

            <div class="col-md-6 d-flex">
                <div class="align-self-center mx-auto my-auto">
                    <input type="submit" asp-action="Delete" asp-controller="Room" asp-route-id="@Model.Id" value="Delete room" class="btn btn-primary" />
                    @*<a asp-action="Delete" asp-controller="Client" asp-route-id="@Model.Id" class="mb-3 btn btn-warning my-3">Delete</a>*@
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
