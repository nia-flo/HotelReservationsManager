@model HotelReservationsManager.Models.RoomDetailsViewModel
@{
    ViewData["Title"] = "Room details";
}

<h1 class="text-center">Room details</h1>

<hr class="style1 bg-warning mb-2" />

<div class="col-md-4 mx-auto">

    <div class="row mb-3">
        <a @*class="text-muted"*@>Capacity</a>
        <input asp-for="Capacity" class="form-control" disabled />
    </div>

    <div class="row mb-3">
        <a @*class="text-muted"*@>Room type</a>
        <input asp-for="Type" class="form-control" disabled />
    </div>

    <div class="row mb-3">
        <a @*class="text-muted"*@>Price for adults</a>
        <input asp-for="AdultPrice" class="form-control" disabled />
    </div>

    <div class="row mb-3">
        <a @*class="text-muted"*@>Price for children</a>
        <input asp-for="ChildPrice" class="form-control" disabled />
    </div>

    <div class="row mb-3">
        <a @*class="text-muted"*@>Number of the room</a>
        <input asp-for="Number" class="form-control" disabled />
    </div>

    @if (this.User.IsInRole("Admin"))
    {
        <div class="d-flex">
            <div class="align-self-center mx-auto">
                <div class="form-group col-md-1">
                    <a asp-action="Edit" asp-controller="Room" asp-route-id="@Model.Id" class="mb-3 btn btn-warning my-3">Edit</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
