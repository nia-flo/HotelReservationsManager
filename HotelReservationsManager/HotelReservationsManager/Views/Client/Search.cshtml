@model HotelReservationsManager.Models.ClientViewModels.ClientSearchViewModel

@{
    ViewData["Title"] = "Search clients";
}

<head>
    <script src="https://unpkg.com/@@popperjs/core@2.0.6/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<h1 class="text-center">Clients</h1>

<hr class="style1 bg-warning mb-2" />


<div class="col-md-5 mx-auto">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <form asp-action="Search" asp-controller="Client" method="post">
                <select class="custom-select mb-3" asp-for="SearchBy">
                    <option value="FirstName">First name</option>
                    <option value="LastName">Last name</option>
                </select>

                <div class="form-group">
                    <input asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value" class="text-danger"></span>
                </div>

                <div class="d-flex">
                    <div class="align-self-center mx-auto">
                        <div class="form-group col-md-1">
                            <input type="submit" value="Search" class="btn btn-warning" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @foreach (var client in Model.Clients)
    {
        <div class="d-flex jumbotron py-1 px-1 my-3 mx-2 border border-warning">
            <div class="col-md-9">
                <h3>@client.FirstName @client.LastName</h3>

                @if (client.IsAdult)
                {
                    <a class="text-muted">
                        <b>Adult</b>
                    </a>
                }
                else
                {
                    <a class="text-muted">
                        <b>Child</b>
                    </a>
                }

            </div>


            <div class="col-md-3">
                <a asp-action="Details" asp-route-id="@client.Id" class="mb-3 btn btn-warning my-3">Details</a>
            </div>
        </div>
    }
</div>

