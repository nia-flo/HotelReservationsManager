@model HotelReservationsManager.Models.ClientViewModels.ClientEditViewModel
@{
    ViewData["Title"] = "Edit Client";
}

<h1 class="text-center">Edit client</h1>

<hr class="style1 bg-warning mb-2" />

<div class="col-md-4 mx-auto">

    <form asp-action="Edit" asp-controller="Client" method="post">
        <div class="row mb-3">
            <a @*class="text-muted"*@>First name</a>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <a @*class="text-muted"*@>Last name</a>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <a @*class="text-muted"*@>Email</a>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="row mb-3">
            <a @*class="text-muted"*@>Phone number</a>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="row mb-3 custom-control custom-checkbox">
            @if (Model.IsAdult)
            {
                Model.IsAdult = false;
                <input asp-for="IsAdult" type="checkbox" class="custom-control-input" id="isAdult">
            }
            else
            {
                Model.IsAdult = true;
                <input asp-for="IsAdult" type="checkbox" class="custom-control-input" id="isAdult" checked>
            }
            <label class="custom-control-label" for="isAdult">A child</label>
        </div>

        @*<div class="d-flex">
                <div class="align-self-center mx-auto">
                    <div class="form-group">
                        <input type="submit" value="Save changes" class="btn btn-primary" />
                    </div>
                </div>
            </div>*@

        <div class="row">
            <div class="col-md-6 d-flex">
                <div class="form-group align-self-center mx-auto my-auto">
                    <input type="submit" value="Save changes" class="btn btn-primary" />
                </div>
            </div>

            <div class="col-md-6 d-flex">
                <div class="align-self-center mx-auto my-auto">
                    <input type="submit" asp-action="Delete" asp-controller="Client" asp-route-id="@Model.Id" value="Delete client" class="btn btn-primary" />
                    @*<a asp-action="Delete" asp-controller="Client" asp-route-id="@Model.Id" class="mb-3 btn btn-warning my-3">Delete</a>*@
                </div>
            </div>
        </div>
    </form>

</div>
